# Configuration pour les gros uploads de vidéos
php_value upload_max_filesize 5G
php_value post_max_size 5G
php_value max_execution_time 3600
php_value max_input_time 3600
php_value memory_limit 1G
php_value max_file_uploads 10

# Optimisations pour les gros fichiers
php_value output_buffering Off
php_value zlib.output_compression Off

# Timeout pour les longues requêtes
Timeout 3600

# Taille maximale des requêtes
LimitRequestBody 5368709120
